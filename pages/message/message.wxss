page{
  background-color: #f1f1f1;
}
.card{
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 15rpx;
  margin: 60rpx 20rpx;
  display: flex;
  flex-direction: column;
  padding: 30rpx 20rpx;
}
.card-title{
  font-size:18px;
  color: #333; 
  font-weight: 500;
}
.card-time{
  font-size:12px;
  color: #ccc;
  margin: 25rpx 0;
  padding-bottom:20rpx;
  border-bottom: 1rpx solid #ccc;
}
.card image{
  width: 100%;
  height: 300rpx;
  margin-bottom:30rpx;
}
.card-hard{
  font-size: 16px;
  color: #333;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.card-detail{
  font-size:14px;
  color: #666;
  margin-top: 20rpx;
}
