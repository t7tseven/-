page{
  background-color: #f1f1f1;
}
.avatar{
  height: 400rpx;
  background-color: #ed702d;
  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar image{
  width: 200rpx;
  height: 200rpx;
  border: 10rpx solid rgba(0, 0, 0, .2);
  border-radius: 50%;
}
.list{
  background-color: #fff;
  font-size: 16px;
}
.list-item{
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #ccc;
}