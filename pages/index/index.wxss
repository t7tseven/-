.banner,
.banner swiper,
.banner image{
  width: 100%;
  height: 390rpx;
}
.nav{
  display: flex;
  flex-wrap: wrap;
}
.nav .nav-item{
  width: 33.3333%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  border-bottom: 1rpx solid #ddd;
  position: relative;
}

.nav .nav-item:nth-child(3n)::after{
  width: 0;
}
.nav image{
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}
.enter{
  display: flex;
  padding: 20rpx 30rpx;
}
.enter-item{
  width: 50%;
  display: flex;
  justify-content: center;
}
.enter-item image{
  width: 320rpx;
  height: 178rpx;
}